<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myjavafxapp.Controllers.GestionUsers.gestionUsers">
    <left>
        <AnchorPane prefHeight="600.0" prefWidth="35.0" style="-fx-background-color: #6739a1#a884df;" BorderPane.alignment="CENTER">
            <children>
                <Button onAction="#returnAction" style="-fx-background-color: transparent; -fx-padding: 0;" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="fas-angle-left" iconSize="20" />
                    </graphic>
                </Button>
            </children>
        </AnchorPane>
    </left>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Text fill="#3544bb" strokeType="OUTSIDE" strokeWidth="0.0" text="Gestion des utilisateurs" VBox.vgrow="NEVER">
                    <font>
                        <Font name="System Bold" size="26.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="20.0" top="10.0" />
                    </VBox.margin>
                </Text>
                <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                    <children>
                        <TextField fx:id="searchField" prefHeight="31.0" promptText="Tapez ici pour chercher" style="-fx-background-color: #FFFFFF; -fx-background-radius: 100;" HBox.hgrow="ALWAYS">
                        </TextField>
                        <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="80.0" style="-fx-background-radius: 100;" text="Chercher" HBox.hgrow="NEVER">
                        </Button>
                        <Button fx:id="addButton" onAction="#addPatientAction" mnemonicParsing="false" prefWidth="100.0" style="-fx-background-color: #6739a1; -fx-background-radius: 100;" text="Ajouter" textAlignment="JUSTIFY" textFill="WHITE" HBox.hgrow="NEVER" />
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="cincolumn" prefWidth="90.0" text="CIN" />
                        <TableColumn fx:id="nomColumn" prefWidth="110.0" text="Nom" />
                        <TableColumn fx:id="prenomColumn" prefWidth="110.0" text="Prenom" />
                        <TableColumn fx:id="birthdateColumn" prefWidth="120.0" text="Date de naissance " />
                        <TableColumn fx:id="roleColumn" prefWidth="120.0" text="Role" />
                        <TableColumn fx:id="userNameColumn" prefWidth="100.0" text="User Name" />
                        <TableColumn fx:id="emailColumn" prefWidth="170.0" text="E-mail" />
                        <TableColumn fx:id="actionColumn" prefWidth="100.0" text="Action" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>